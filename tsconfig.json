{
	"compilerOptions": {
		"target": "ESNext",
		"sourceMap": false,
		"module": "ES2015",
		"declaration": true,
		"strict": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "test"]
}
